<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/
                        https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">
    <Frame name="SongFrameTemplate" virtual="true">
        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="Text" inherits="GameFontHighlight" wordwrap="false" justifyH="LEFT">
                    <Anchors>
                        <Anchor point="LEFT" x="4"/>
                        <Anchor point="RIGHT" x="-50"/>
                    </Anchors>
                    <Color r="0.95" g="0.95" b="0.95"/>
                </FontString>
            </Layer>
            <Layer level="BACKGROUND">
                <Texture parentKey="BlueBackground">
                    <Color r="0.1" g="0.194" b="0.941" a="0.050"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="0" y="-2"/>
                        <Anchor point="BOTTOMRIGHT" x="0" y="2"/>
                    </Anchors>
                </Texture>
                <Texture parentKey="BlackBackground"  >
                    <Color r="1" g="1" b="1" a="0.05"/>                   
                    <Anchors>
                        <Anchor point="TOPLEFT" x="0" y="-2"/>
                        <Anchor point="BOTTOMRIGHT" x="0" y="2"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Frames>
			<Button parentKey="PlayButton">
                <Size x="24" y="24"/>
                <Anchors>
                    <Anchor point="RIGHT" x="-24"/>
                </Anchors>
                <NormalTexture file="Interface\Buttons\UI-SpellbookIcon-NextPage-Up"/>
				<PushedTexture file="Interface\Buttons\UI-SpellbookIcon-NextPage-Down"/>
                <HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
            </Button>
            <Button parentKey="PlaylistButton" text="Add">
                <Size x="24" y="24"/>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString parentKey="Text" inherits="GameFontNormal" text="+" wordwrap="false" justifyH="CENTER" justifyV="MIDDLE">
                            <Anchors>
                                <Anchor point="RIGHT" x="-8"/>
                            </Anchors>
                            <Color r="0.95" g="0.95" b="0"/>
                        </FontString>
                    </Layer>
                </Layers>
                <Anchors>
                    <Anchor point="RIGHT" x="-4"/>
                </Anchors>
                <NormalTexture file="Interface\Buttons\UI-SquareButton-Up"/>
				<PushedTexture file="Interface\Buttons\UI-SquareButton-Down"/>
                <HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
            </Button>
		</Frames>
    </Frame>
</Ui>
